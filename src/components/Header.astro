---
    import textLogo from '../assets/images/bani_logo_hor_bl.svg';
---

<header>
    <div class="header-container wrapper">
        <a href="/" title="Bani Bakery logo" class="logo" aria-label="Logo image, a link to homepage">
            <img src={textLogo.src} alt="Bani bakery logo" class="pics" />
        </a>
        <nav class="header-nav">
            <ul>
                <li><a href="gallery.html">Gallery</a></li>
                <li><a href="#sweetTable" class="navLink">Sweet Table</a></li>
                <li><a href="#flavorFill" class="navLink">Flavors & Fillings</a></li>
                <li><a href="#about" class="navLink">About</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
        </nav>
    </div>
</header>

<style>
    header{width: 100%;padding: 1rem 0;}
    .header-container{
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .header-container nav ul li{
        display: inline-block;
        margin-right: 1.5rem;
    }
    .header-container nav ul li:last-child{margin-right: 0;}
    .header-container nav ul li a{
        text-decoration: none;
        color: #000;
        font-weight: 500;
        position: relative;
    }
    .header-container nav ul li a:after{
        content: '';
        position: absolute;
        bottom: -3px;
        height: 2px;
        left: 0;
        background-color: #000;
        width: 0;
        height: 0;
        transition: all 0.2s ease-in-out;
    }
    .header-container nav ul li a:hover:after{
        width: 100%;
        height: 2px;
    }
    .header-container .logo{width: 250px;display: block;}
</style>