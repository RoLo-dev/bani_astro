---
    import textLogo from '../assets/images/bani_logo_hor_bl.svg';
---

<div class="alert-banner">
    <div class="wrapper">
        <p><span class="bold">NO WALK-INS</span>, appointment only. For any inquiries please <a href="/#contact">contact us</a>.</p>
        <button class="alert-close-btn"><i class="fa-solid fa-xmark"></i></button>
    </div>
</div>
<header>
    <div class="header-container wrapper">
        <div class="mobile-btn-container">
            <button class="mobile-btn">
                <span class="hamburger-icon"></span>
            </button>
        </div>
        <div class="left-panel">
            <a href="/" title="Bani Bakery logo" class="logo" aria-label="Logo image, a link to homepage">
                <img src={textLogo.src} alt="Bani bakery logo" class="pics" />
            </a>
            <nav class="header-nav">
                <button class="mobile-close-btn"><i class="fa-solid fa-xmark"></i></button>
                <ul>
                    <li>
                        <a href="/gallery" class="nav-link-anchor" title="Gallery link" aria-label="Link to gallery page">Gallery</a>
                    </li>
                    <!-- <li>
                        <a tabindex="-1" href="" class="navLink nav-link-anchor" title="Desserts link" aria-label="Link to desserts">Desserts</a>
                    </li>
                    <li>
                        <a tabindex="-1" href="" class="navLink nav-link-anchor" title="Flavors & Fillings" aria-label="Link to flavors and fillings section">Flavors & Fillings</a>
                    </li> -->
                    <li>
                        <a href="/#about" title="About link" class="navLink nav-link-anchor" aria-label="Link to about section">About</a>
                    </li>
                    <li>
                        <a href="/#contact" class="nav-link-anchor" title="Contact" aria-label="Link to contact section">Contact</a>
                    </li>
                    <!-- <li>
                        <a tabindex="-1" href="" class="nav-link-anchor" title="Reviews link" aria-label="Link to reviews page">Reviews</a>
                    </li>
                    <li>
                        <a tabindex="-1" href="" class="nav-link-anchor" title="Terms & Conditions link" aria-label="Link to terms and conditions pages">Terms & Conditions</a>
                    </li> -->
                    <li class="mobile-social-icons">
                        <a href="https://www.facebook.com/banibakery/" class="nav-link-anchor" title="Facebook" aria-label="Link to facebook page" target="_blank"><i class="fa-brands fa-facebook"></i></a>

                        <a href="https://www.instagram.com/banihouseofcakes/" class="nav-link-anchor" title="Instagram" aria-label="Link to instagram page" target="_blank"><i class="fa-brands fa-instagram"></i></a>

                        <a id="nav-yelp-link" class="nav-link-anchor" href="https://www.yelp.com/biz/bani-bakery-santa-ana" title="Yelp" aria-label="Link to yelp page" target="_blank"><i class="fa-brands fa-yelp"></i></a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="right-panel">
            <a href="https://www.facebook.com/banibakery/" class="nav-link-anchor" title="Facebook" aria-label="Link to facebook page" target="_blank"><i class="fa-brands fa-facebook"></i></a>

            <a href="https://www.instagram.com/banihouseofcakes/" class="nav-link-anchor" title="Instagram" aria-label="Link to instagram page" target="_blank"><i class="fa-brands fa-instagram"></i></a>

            <a id="nav-yelp-link" class="nav-link-anchor" href="https://www.yelp.com/biz/bani-bakery-santa-ana" title="Yelp" aria-label="Link to yelp page" target="_blank"><i class="fa-brands fa-yelp"></i></a>
        </div>
    </div>
</header>

<style>
    .alert-banner{
        width: 100%;
        background-color: var(--hot-pink);
        color: #000;
        padding: 1.25rem 0;
        text-align: center;
    }
    .alert-banner div{
        position: relative;
        font-size: 1.25rem;
    }
    .alert-banner a{color: #000;text-decoration: underline;}
    .alert-banner .alert-close-btn{
        color: #000;
        background: 0;
        padding: 4px;
        border: 0;
        position: absolute;
        right: 0;
        top: 0;
        transform: rotate(270deg);
        font-size: 1.15rem;
    }
    header{
        width: 100%;
        padding: 1.5rem 0;
        position: relative;
        border-bottom: 1px solid var(--hot-pink);
    }
    .header-container{
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .header-container .left-panel{
        display: flex;
        align-items: center;
        gap: 0 3rem;
    }
    .header-container .right-panel{
        display: flex;
        gap: 0 1.25rem;
    }
    .header-container .right-panel a{
        color: #000;
        font-size: 1.25rem;
    }
    .header-container .right-panel a:hover{color: var(--hot-pink);}
    .header-container .right-panel a:last-of-type{margin-right: 0;}
    .header-container nav ul li{
        display: inline-block;
        margin-right: 1.5rem;
    }
    .header-container nav ul li:last-child{margin-right: 0;}
    .header-container nav ul li a{
        text-decoration: none;
        color: #000;
        font-weight: 700;
        position: relative;
    }
    .header-container nav ul li a:after{
        content: '';
        position: absolute;
        bottom: -3px;
        height: 2px;
        left: 0;
        background-color: var(--hot-pink);
        width: 0;
        height: 0;
        transition: all 0.2s ease-in-out;
    }
    .header-container nav ul li a:hover:after{
        width: 100%;
        height: 2px;
    }
    .header-container .logo{width: 200px;display: block;}
    .mobile-btn-container, .header-container nav ul li.mobile-social-icons,
    .mobile-close-btn{display: none;}

    @media screen and (max-width: 920px){
        .mobile-btn-container,
        .mobile-close-btn{display: block;}
        .header-container nav ul li.mobile-social-icons{display: inline-block;}
        .header-container .right-panel a{display: none;}
        .mobile-btn{
            background: transparent;
            border: 0;
            padding: 1.25rem 0.9rem 1.25rem 0;
            z-index: 10;
        }
        .hamburger-icon{ display: block;position: relative; }
        .hamburger-icon,
        .hamburger-icon::before,
        .hamburger-icon::after{
            width: 2.25rem;
            height: 2px;
            background: #000;
            border-radius: 30px;
            transition: transform 300ms ease-in-out, opacity 200ms linear;
        }
        .hamburger-icon::before,
        .hamburger-icon::after{ content: '';position: absolute;left: 0; }
        .hamburger-icon::before{bottom: 9px;}
        .hamburger-icon::after{top: 9px;}
        header{padding: 2rem 0;}
        .header-container .logo{
            position: absolute;
            left: 50%;
            margin-left: -100px;
        }
        .header-nav{
            display: flex;
            position: fixed;
            justify-content: center;
            align-items: center;
            top: 0;
            right: 0;
            width: 100%;
            height: 100vh;
            transform: translate(100%, 0px);
            min-height: 450px;
            z-index: 5;
            opacity: 0;
            background-color: var(--cream);
            transition: all 0.3s ease-in-out;
        }
        .header-nav.show-nav{
            opacity: 0.95;
            transform: translateY(0px);
        }
        .header-container nav ul{padding: 4rem 5rem;}
        .header-container nav ul li{
            display: block;
            margin-right: 0;
            margin-bottom: 3rem;
            font-size: 1.75rem;
            text-align: center;
        }
        .header-container nav ul li:last-child{margin-bottom: 0;}
        .header-container nav ul li:last-child a{
            font-size: 2rem;
            margin-right: 2rem;
        }
        .header-container nav ul li:last-child a:last-of-type{margin-right: 0;}
        .mobile-close-btn{
            position: absolute;
            right: 10%;
            top: 5%;
            border: 0;
            padding: 3px 5px;
            background: transparent;
            font-size: 1.75rem;
        }
    }
    @media screen and (max-width: 600px){
        .alert-banner p{padding: 1.125rem;}
        .alert-banner .alert-close-btn{
            right: -12px;
            top: -5px;
            font-size: 1.3rem;
        }
    }
    @media screen and (max-width: 400px){
        .header-container .logo{
            width: 175px;
            left: auto;
            right: 10%;
            margin-left: 0;
        }
    }
</style>
<script>
    let mobileNav = document.querySelector('.header-nav');
    let hamburgerIcon = document.querySelector('.mobile-btn');
    let mobileCloseIcon = document.querySelector('.mobile-close-btn')

    hamburgerIcon?.addEventListener('click', toggleNav)
    mobileCloseIcon?.addEventListener('click', toggleNav)

    function toggleNav(){
        mobileNav?.classList.toggle('show-nav')
    }
    document.querySelector('.alert-close-btn')?.addEventListener('click', () =>{
        document.querySelector('.alert-banner').style.display = 'none';
    })
</script>